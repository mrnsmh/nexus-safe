{
  "name": "nexus-safe",
  "description": "Hardened System Reliability Agent. Focuses on secure, policy-enforced local monitoring and recovery.",
  "version": "1.3.0",
  "author": "Jack",
  "entrypoint": "SKILL.md",
  "requirements": {
    "binaries": ["docker", "pm2"],
    "pythonPackages": ["psutil"],
    "env": [
      "NEXUS_SAFE_ALLOW_RESTARTS",
      "NEXUS_SAFE_ALLOWED_DOCKER",
      "NEXUS_SAFE_ALLOWED_PM2",
      "NEXUS_SAFE_MAX_RESTARTS",
      "NEXUS_SAFE_LOGS_REQUIRED"
    ]
  },
  "permissions": {
    "filesystem": ["write:~/.nexus-safe/"],
    "network": ["none"],
    "commands": ["docker", "pm2"]
  }
}
